package 链表;

public class _21_合并两个有序链表 {
    
	public ListNode mergeTwoLists(ListNode l1, ListNode l2) {
    	ListNode pNode = l1, lNode = l1, rNode = l2;
    	while(l1.next!=null && l2.next!=null){
    		if(l1.val < l2.val){
    			l1 = l1.next;
    		}else{
    			l2 = l2.next;
    			rNode.next = lNode.next;
    			lNode.next = rNode;
    		}
    		rNode = l2;
    		lNode = lNode.next;
    	}
    	return pNode;
    }
    
}
