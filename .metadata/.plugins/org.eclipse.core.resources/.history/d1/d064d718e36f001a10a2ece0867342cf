package 排序;
/**
 * @author yusael
 *https://leetcode-cn.com/problems/merge-sorted-array/
 */
public class _88_合并两个有序数组 {
    public void merge(int[] nums1, int m, int[] nums2, int n) {
    	int li = 0, ri = 0, ai = 0;
    	while(ri < n && li < m){
    		if(nums1[li] <= nums2[ri]){
    			 li++;
    			 ai++;
    		}else{ // nums1[li] >= nums2[ri]
    			// ri指向元素插入到ai
    			// 首先将 ai到ai+li往后移1位
    			for(int i = m+n; i > li; i--){
    				nums1[i + 1] = nums1[i];
    			}
    			
    			nums1[ai++] = nums2[ri++];
    		}
    	}
    }
}
